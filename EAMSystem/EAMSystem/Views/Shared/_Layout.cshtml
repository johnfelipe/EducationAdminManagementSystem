<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr", "~/bundles/js")
</head>
<body>
    @RenderBody()

    @Scripts.Render("~/bundles/jquery")

    <div id="footer-shell" style="width:100%">
        <div id="footer" class="center footer" style="width:900px;">
            <table id="footer-table" style="line-height:50px; width:100%">
                <tr>
                    <td id="footer-copy" align="left">&copy;@DateTime.Now.Year - EAMSytem</td>
                    <td id="footer-about" align="right">
                        教务管理系统由XXX提供技术支持
                    </td>
                </tr>
            </table>
        </div>
    </div>
</body>
</html>
